<div class="container" style="margin-top: 40px">
  <h2 style="color: white; text-align: center; padding-bottom: 10px">Resume List</h2>
  <table class="table table-striped table-dark" id="resume_table">
    <thead>
      <tr>
        <th scope="col">Id</th>
        <th scope="col">Submitted By</th>
        <th scope="col">Email</th>
        <th scope="col">Created At</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <% @resumes.each do |resume| %>
        <tr>
          <th scope="row"><%= resume.id %></th>
          <td><%= resume.full_name %></td>
          <td><%= resume.email %></td>
          <td><%= resume.created_at.strftime("%F %T")%></td>
          <td><button type="button" class="btn btn-success btn-sm pdf_btn">Generate Pdf</button></td>
        </tr>
      <% end %>

    </tbody>
  </table>
</div>


<script>
    $(document).ready( function () {
        $('#resume_table').DataTable();
    } );
</script>