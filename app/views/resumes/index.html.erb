<div class="container" style="margin-top: 40px">
  <h2 style="color: white; text-align: center; padding-bottom: 10px">Resume List</h2>
  <table class="table table-striped table-dark" id="resume_table">
    <thead>
      <tr>
        <th scope="col">Id</th>
        <th scope="col">Submitted By</th>
        <th scope="col">Email</th>
        <th scope="col">Created At</th>
        <% if current_user.present? %>
          <th scope="col">Action</th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <% @resumes.each do |resume| %>
        <tr>
          <th scope="row"><%= resume.id %></th>
          <td><%= resume.full_name %></td>
          <td><%= resume.email %></td>
          <td><%= resume.created_at.strftime("%F %T")%></td>
          <% if current_user.present? %>
           <td><%= link_to 'Generate Pdf', generate_pdf_path(id: resume.id, format: :pdf), target: '_blank', class: 'btn btn-success btn-sm pdf_btn' %></td>
          <% end %>
        </tr>
      <% end %>

    </tbody>
  </table>
</div>


<script>
    $(document).ready( function () {
        $('#resume_table').DataTable();
    } );
</script>