<h1 style="text-align: center">Resume List</h1>
<table>

<tbody>

<div style="width: 100%; height: 250px; padding-left: 170px">

<% @ads.each do |ad| %>
    <div style="height: 280px;  float: left; width: 300px;margin-left: 10px ;margin-top: 10px; border: 1px solid">
      <div>
        <% if ad.image.attached? %>
          <%=image_tag(ad.image,  size: "298x200") %>
        <% end %>
      </div>
    <p style="margin-top: 10px"> <strong>Title : </strong><%= ad.title %></p>

    <strong> Price:     </strong><%= ad.price %> $

    <%#= ad.description %>
    <%#= ad.catorgory %>
      <div style="margin-top: -50px; padding-left: 200px">
    <%= link_to 'Show', ad,class: 'btn btn-success' %>
      </div>
    <%#= link_to 'Edit', edit_ad_path(ad) %>
    <%#= link_to 'Destroy', ad, method: :delete, data: { confirm: 'Are you sure?' } %>

    </div>
<% end %>

  <div style="padding-top: 300px">
  <%= will_paginate @ads ,renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
  </div>
</div>

</tbody>
</table>


